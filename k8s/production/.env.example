# Kubernetes namespace where pod-watch app and collector will run
APP_NAMESPACE=pod-watch

# Workload naming
APP_NAME=pod-watch
APP_VERSION=1.0.0

# Container image to deploy (must be available to your cluster)
APP_IMAGE=registry.example.com/your-org/kubernetes-pod-watch:1.0.0

# App deployment
APP_REPLICAS=1
CONTAINER_PORT=8080
SERVICE_PORT=8080
SERVICE_TYPE=ClusterIP

# Collector schedule and behavior
COLLECT_SCHEDULE="*/2 * * * *"
LOG_TAIL_LINES=200
SAMPLE_INTERVAL_SECONDS=30

# Namespace to monitor (can be same as APP_NAMESPACE or any other namespace)
TARGET_NAMESPACE=default

# External Postgres connection (required)
DB_HOST=postgres.example.internal
DB_PORT=5432
DB_NAME=pod_watch
DB_USER=pod_watch_user
DB_PASSWORD=change_me
DB_SSL=true
